<h3>Reseña</h3>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-11">
            <!-- <img src="<%=//`https://lusitanos.s3.us-east-1.amazonaws.com/markings/${data._id}.bmp`%>" alt=""
                width=100% onerror='src="/assets/img/resena.png"'> -->
                <div class="wrapper">

                    <div class="toolbar">
                        <a class="selected" href="#" id="open" onclick="OpenImage()"><img src="/assets/icons/open-icon.png"></a>
                        <a href="#" id="save" onclick="SaveImage()"><img src="/assets/icons/save-icon.png"></a>
                        <a href="#" id="brush" onclick="ChangeTool('brush')"><img src="/assets/icons/brush-icon.png"></a>
                        <a href="#" id="line" onclick="ChangeTool('line')"><img src="/assets/icons/line-icon.png"></a>
                        <a href="#" id="rectangle" onclick="ChangeTool('rectangle')"><img src="/assets/icons/rectangle-icon.png"></a>
                        <a href="#" id="circle" onclick="ChangeTool('circle')"><img src="/assets/icons/circle-icon.png"></a>
                        <a href="#" id="ellipse" onclick="ChangeTool('ellipse')"><img src="/assets/icons/ellipse-icon.png"></a>
                        <a href="#" id="polygon" onclick="ChangeTool('polygon')"><img src="/assets/icons/polygon-icon.png"></a>
                    </div><br>
                    <canvas id="my-canvas" width="1024" height="853"></canvas>
                    <div id="backDrop"><input type="text" id = "myText" /></div>
                    <div id="img-data-div">
                        <a href="#" id="img-file" download="image.png">download image</a>
                    </div>
            
            
                </div>
        </div>
        <div class="col-lg-1" style="padding-right:0px">
            <% if (id==='0' ) { %>


                <div class="float-right mb-3">
                    <button type="submit" class="btn btn-primary text-center" id="sendRegistrar"
                        style="width:95px">Registrar</button>
                </div>



                <% } else { %>


                    <div class=" float-right mb-3">

                        <button type="button" class="btn btn-primary text-center" id="sendModificar"
                            style="width:95px" onclick="owModificar('<%= id %>')">Modificar</button>
                    </div>

                    <div class=" float-right">

                        <button type="button" class="btn btn-primary text-center" id="sendEliminar"
                            style="width:95px" onclick="owEliminar('<%= id %>')">Eliminar</button>
                    </div>


                    <% } %>
        </div>
        <br>
        <div class="col-lg-11">
            <label for="notes">Reseña:</label>
            <textarea class="form-control" id="markings" name="markings" rows="5"><%= data.markings %></textarea>
        </div>

    </div>
</div>

