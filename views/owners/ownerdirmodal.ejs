<div class="container">


    <div class="row">
        <div class="col-lg-12">
            <div class="tab">
                <button class="tablinks active" onclick="openForm(event, 'Ganaderia')">Ganaderia</button>
                <button class="tablinks" onclick="openForm(event, 'Contacto')">Contacto</button>
                <button class="tablinks" onclick="openForm(event, 'Fotos')">Ubicación</button>
            </div>




                <div id='msg' class="alert alert-dismissible fade show " style="display:none;">
                    <strong>Note!</strong> This is a simple example of dismissible alert.
                </div>


                <div id="Contacto" class="tabcontent">
                    <h3>Contacto</h3>
                    <div class="row">
                        <!-- <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" id="chkC" name="chkC"
                                    value="<%= //(data.contacto[0].chk === null ) ? '' : data.contacto[0].chk %>"
                                    checked /> Monstrar datos en directorio
                            </label>
                        </div> -->
                        <div class="col-lg-2 form-group floating-label-form-group controls">
                            <label>Saludo:</label>
                            <input type="text" class="form-control" placeholder="Saludo" id="salutationC"
                                name="salutationC" style="text-transform:capitalize"
                                value="<%= (data.contacto[0].salutation  === null) ? '' : data.contacto[0].salutation %>">
                        </div>
                        <div class="col-lg-5 form-group floating-label-form-group controls">
                            <label>Nombre</label>
                            <input type="text" class="form-control" placeholder="Nombre(s)" id="firstNameC"
                                name="firstNameC" required
                                value="<%= (data.contacto[0].firstName  === null) ? '' : data.contacto[0].firstName %>">
                        </div>
                        <div class="col-lg-5 form-group floating-label-form-group controls">
                            <label>Apellidos:</label>
                            <input type="text" class="form-control" placeholder="Apellidos" id="lastNameC"
                                name="lastNameC" required
                                value="<%= (data.contacto[0].lastName  === null) ? '' : data.contacto[0].lastName %>">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>Dirección:</label>
                            <input type="text" class="form-control" placeholder="Dirección" id="streetC" name="streetC"
                                required
                                value="<%= (data.contacto[0].street  === null) ? '' : data.contacto[0].street %>">
                        </div>
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>Ciudad:</label>
                            <input type="text" class="form-control" placeholder="Ciudad" id="cityC" name="cityC"
                                required value="<%= (data.contacto[0].city  === null) ? '' : data.contacto[0].city  %>">
                        </div>
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>Estado:</label>
                            <input type="text" class="form-control" placeholder="Estado" id="stateC" name="stateC"
                                required
                                value="<%= (data.contacto[0].state  === null) ? '' : data.contacto[0].state %>">
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>Pais:</label>
                            <input type="text" class="form-control" placeholder="Pais" id="countryC" name="countryC"
                                required
                                value="<%= (data.contacto[0].country  === null) ? '' : data.contacto[0].country %>">
                        </div>
                        <div class="col-lg-2 form-group floating-label-form-group controls">
                            <label>Codigo Postal:</label>
                            <input type="text" class="form-control" placeholder="Postal Code" id="postalCodeC"
                                name="postalCodeC" required
                                value="<%= (data.contacto[0].postalCode  === null) ? '' : data.contacto[0].postalCode %>">
                        </div>
                    </div>
                    <hr>
                    <br>
                    <div class="row">
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>Teléfono:</label>
                            <input type="text" class="form-control" placeholder="Phone" id="phoneC" name="phoneC"
                                value="<%= (data.contacto[0].phone === null) ? '' : data.contacto[0].phone %>">
                        </div>
                        <div class="col-lg-4 form-group floating-label-form-group controls">
                            <label>email:</label>
                            <input type="text" class="form-control" placeholder="E mail" id="emailC" name="emailC"
                                required
                                value="<%= (data.contacto[0].email  === null) ? '' : data.contacto[0].email  %>">
                        </div>

                    </div>
                </div>
                <div id="Ganaderia" class="tabcontent" style="display: block ;">
                    <h3>Ganaderias</h3>
                    <div class="row ">

                        <div class="col-lg-2 form-group floating-label-form-group controls">
                            <label>Id:</label>
                            <input type="text" class="form-control " placeholder="Id" id="_id" name="_id"
                                required style="text-transform:uppercase" value="<%= (data._id) %>">
                        </div>
                        <div class="col-lg-6 form-group floating-label-form-group controls">
                            <label>Ganadería:</label>
                            <input type="text" class="form-control" placeholder="Ganadería" id="farm" name="farm"
                                required value="<%= (data.farm) %>">
                        </div>
                        <div class="col-lg-3 form-group floating-label-form-group controls">
                            <label>Hierro:</label>
                             <img id="hierroImagen"
                                 src="<%=`https://lusitanos.s3.us-east-1.amazonaws.com/hierros/${data._id}.bmp`%>" 
                                alt="" width="130" height="auto" onerror="this.src='/assets/img/icono.png'"> 


                        </div>
                        <br>
                        <div class="col-lg-12" style="margin-top:25px">

                            <div id="carouselCaballos" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2500"  >
                                <div class="carousel-inner"> 
    
    
    
                                    <% for ( let i=0; i <=files.length-1; i++) { console.log(files[i]); let
                                        str=`https://lusitanos.s3.us-east-1.amazonaws.com/${files[i]}`; let
                                        alt=`slide${i}`; let img=`img${i}`; if(i===0){%>
                                        <div class="carousel-item active">
                                            <%} else {%>
                                                <div class="carousel-item">
                                                    <%}%>
                                                        <img class="d-block w-100 mx-auto" src="<%=str%>"
                                                            id="<%= img %>" alt="<%=alt%>" />
                                                </div>
                                                <% } %>
                                        </div>
                                        <a class="carousel-control-prev" href="#carouselExampleControls"
                                            data-bs-target="#carouselCaballos" type="button" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Prev</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselExampleControls"
                                            data-bs-target="#carouselCaballos" type="button" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                </div>
                            </div>
                    </div>


                    </div>


                </div>
                <div id="Fotos" class="tabcontent">
                    <h3>Ubicación</h3>
                    
                    <div class=" mt-5" >
                            <div class="embed-responsive embed-responsive-16by9" style="height: 100%">
                                <iframe
                                    src="https://maps.google.com/maps/embed/v1/view?key=AIzaSyCFIAZ2P_IE8rzuqxWJVYznHGT4AifWzn0&zoom=8&center=<%= data.location.coordinates[1] %>, <%= data.location.coordinates[0] %>"
                                    width="100%" height="480" frameborder="0" style="border: 0"
                                    allowfullscreen=""></iframe>
                            </div>



                        </div>





        </div>

    </div>




</div>












<script>
    function openForm(evt, form)
    {
        var i, tabcontent, tablinks
        tabcontent = document.getElementsByClassName("tabcontent")
        console.log(tabcontent)
        for (i = 0; i < tabcontent.length; i++)
        {
            tabcontent[i].style.display = "none"
        }
        tablinks = document.getElementsByClassName("tablinks")
        for (i = 0; i < tablinks.length; i++)
        {
            tablinks[i].className = tablinks[i].className.replace(" active", "")
        }
        document.getElementById(form).style.display = "block"
        evt.currentTarget.className += " active"
    }
</script>