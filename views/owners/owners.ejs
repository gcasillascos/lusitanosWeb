<!DOCTYPE html>
<html lang="en">

<%- include('../layouts/header'); -%>
    <%- include('../layouts/scripts'); -%>

        <body>


            <%- include('../layouts/menu'); -%>
            <div class="spinner-border text-primary" id="spinner" role="status">
                <span class="sr-only">Loading...</span>
            </div>


                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-md-10 mx-auto">

                            <div class="page-heading text-center">
                                &nbsp;
                                <h1><i class="fas fa-horse rojo"></i>
                                    Ganaderias</h1>
                                &nbsp;&nbsp;
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 mx-auto">


                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">

                                <button type="submit" class="btn btn-primary text-center" id="sendNuevo"
                                    style="width:95px" onclick="nuevaPersona('0')">Nuevo</button>
                            </div>
                            <br>
                            <div class="table-responsive">


                                <table id="table" data-search="true" data-pagination="true"
                                    data-page-list="[10, 25, 50, 100, all]" data-show-export="true"
                                    data-toolbar="#toolbar" data-id-field="_id" data-show-export="true"
                                    data-click-to-select="true">
                                    <thead>
                                        <tr class="header-color">
                                            <th data-field="_id" data-sortable=true data-formatter="iconformatter">
                                                Hierro
                                            </th>
                                            <th data-field="firstName" data-sortable=true>Nombre</th>
                                            <th data-field="lastName" data-sortable=true>Apellidos</th>
                                            <th data-field="farm" data-sortable=true>Ganadería</th>
                                            <th data-field="country" data-sortable=true>País</th>
                                            <th data-field="state" data-sortable=true>Estado</th>
                                        </tr>



                                </table>
                                <script>

                                    let data = <%- data %>
                                        console.log(data)
                                    var $table = $('#table')

                                    function buildTable($el)
                                    {

                                        $el.bootstrapTable({
                                            onClickRow: function (row, $element)
                                            {
                                                llamaPersona(row._id)
                                            },
                                            data: data,

                                        })

                                    }

                                    


                                    function iconformatter(value)
                                    {
                                        console.log(value)
                                        let img = `<img src="https://lusitanos.s3.us-east-1.amazonaws.com/hierros/${ value }.bmp" alt="" width="60" height="40" onerror=src="/assets/img/icono.png">'`
                                        console.log(img)
                                        return img
                                    }

                                    function dateFormatter(value)
                                    {
                                        return value.slice(0, 10)
                                    }

                                    $(function ()
                                    {
                                        buildTable($table)
                                         hideSpinner()
                                    })
                                </script>

                            </div>
                        </div>

                    </div>
                    <hr>
                </div>


                <!-- Modal -->
                <div class="modal fade" id="owModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false"
                    role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-xl" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="modalLabel">Modal title</h5>
                                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">



                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>



                <%- include('../layouts/footer'); -%>



        </body>

</html>